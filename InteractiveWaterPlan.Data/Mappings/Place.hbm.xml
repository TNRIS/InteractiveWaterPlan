<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="InteractiveWaterPlan.Core" namespace="InteractiveWaterPlan.Core">
  
  <class name="Place" mutable="false">
    <id name="SqlId">
      <column name="SQL_ID"/>
    </id>
    <property column="PlaceName" name="Name" />
    <property column="PlaceName_Category_ID" name="CategoryId" />
    <property column="PlaceName_Category_Name" name="CategoryName" />
  </class>

  <class name="PlaceCategory" mutable="false">
    <id name="Id">
      <column name="PlaceName_Category_ID"/>
    </id>
    <property column="PlaceName_Category_Name" name="Name" />
  </class>

  <class name="PlaceFeature" mutable="false">
    <id name="SqlId">
      <column name="SQL_ID" />
    </id>
    <property column="PlaceName_Geog" name="WKTGeog" />
    <property column="PlaceName" name="Name" />
  </class>
  
  <!-- Queries -->
  
  <sql-query name="GetPlacesByCategory">
    <return class="Place"/>
    exec dbo.usp_Select_Places_by_Category_tbl_GEMSS_Vector_PlaceNames :var_CategoryID
  </sql-query>

  <sql-query name="GetAllPlaceCategories">
    <return class="PlaceCategory"/>
    exec dbo.usp_Select_Categories_lk_GEMSS_Vector_PlaceName_Category
  </sql-query>

  <sql-query name="GetPlacesByNamePart">
    <return class="Place"/>
    exec dbo.usp_Select_AutoComplete_tbl_GEMSS_Vector_PlaceNames :var_NamePart
  </sql-query>

  <sql-query name="GetPlaceFeature">
    <return class="PlaceFeature" />
    exec dbo.usp_Select_GEOG_by_PlaceID_tbl_GEMSS_Vector_PlaceNames :var_PlaceID
  </sql-query>
  
</hibernate-mapping>