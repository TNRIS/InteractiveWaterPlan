@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/ExtJS/resources/css/ext-all-gray.css",
        "~/Content/OpenLayers/theme/default/style.css",
        "~/Content/bootstrap/css/bootstrap.min.css",
        "~/Content/Site.css"
    )

    <link rel="icon" type="image/ico" href="@Url.Content("~/favicon.ico")" />
   
</head>

<body>

    @RenderBody()
 
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        @Scripts.Render("/Content/OpenLayers/OpenLayers.debug.js")
    }
    else
    {
        @Scripts.Render("/Content/OpenLayers/OpenLayers.js")
    }
    
    <input type="hidden" id="scripts_path" value="@Url.Content("~/Scripts")" />
    @Scripts.Render("~/bundles/js/scripts")

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</body>
</html>
