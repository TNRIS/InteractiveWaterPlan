@{
    Layout = null;
}

@using System.Web.Optimization

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Interactive State Water Plan 2012 | TWDB</title>

    <link rel="icon" type="image/ico" href="@Url.Content("~/favicon.ico")" />

    @Styles.Render("~/Content/bootstrap/css/cosmo.bootstrap.css",
        "~/Content/FontAwesome/css/font-awesome.css",
        "~/Content/SiteNew.css"
    )

    @Scripts.Render("~/bundles/js/modernizr")
</head>
<body lang="en">
    <div class="container">
        <div class="page-header">
            <h1>
                Texas State Water Plan 2012
            </h1>
            <p class="lead">Texas Water Development Board</p>
        </div>

        <div class="row">
            <div class="span12">
                <div class="alert alert-block alert-warning-border">
                    <h4>Warning!</h4>
                    This site is currently in alpha testing and is undergoing extensive QA/QC.
                    In some cases, the data are known to be wrong. Do not rely on these data.<br />
                    For definitive 2011 Regional Water Plan data please go to: <a href="http://www.twdb.state.tx.us/waterplanning/rwp/plans/2011/">http://www.twdb.state.tx.us/waterplanning/rwp/plans/2011/</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="span12" id="themeNavContainer">
            </div>
        </div>

        <div class="row">
            <div class="span12">
                <div id="mapContainer"></div>
            </div>
        </div>

        <div class="row toolbar">
            <div class="span12">
                <div class="pull-left" id="yearNavContainer"></div>
                
                <div class="pull-right">

                    <div class="input-append">
                        <input type="text" placeholder="Go to Location" />
                        <button class="btn" type="button">Go</button>
                    </div>

                </div>

                <div class="pull-right">
                    <button class="btn" type="button">
                        Zoom to Texas
                    </button>
                    &nbsp;
                </div>
                
            </div>
        </div>

        <div id="dataContainer">
            <div class="row">
                <div class="span5" id="breadcrumbContainer"></div>
            </div>

            <div class="row">
                <div class="span12" id="tableContainer"></div>
            </div>
        </div>

    </div>

    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        @Scripts.Render("~/Content/OpenLayers/OpenLayers.debug.js")
    }
    else
    {
        @Scripts.Render("~/Content/OpenLayers/OpenLayers.js")
    }
    
    <input type="hidden" id="base_script_path" value="@Url.Content("~/Scripts")" />
    <input type="hidden" id="base_path" value="@Url.Content("~/")" />

    @Scripts.Render("~/bundles/js/app")
    <script data-main="@Url.Content("~/Scripts/Compiled/backbone_app/app.js")" src="@Url.Content("~/Scripts/require.js")" type="text/javascript"></script>


</body>
</html>
