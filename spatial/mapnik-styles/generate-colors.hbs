Map {
  background-color: transparent;
}

#texas-{{ legislativeBody }} {
  line-width: 2;
  line-join: round;

{{#each colors}}
  [District={{ this.district }}] {
    polygon-fill: {{ this.poly }};
    line-color: {{ this.outline }};
  }{{/each}}
}


#texas-{{ legislativeBody }}-label-points {
  text-face-name: 'Open Sans Regular';
  text-halo-radius: 1;
  text-min-distance: 5;
  text-placement: vertex;
  text-size: 0;
  text-name: '';

  [zoom>=7] {
    text-name: '[District]';
    text-size: 12;
  }
  [zoom>=8] {
    text-name: '[District]';
    text-size: 15;
  }
  [zoom>=9] {
    text-name: '[District]';
    text-size: 20;
  }

{{#each colors}}
  [District={{ this.district }}] {
    text-fill: {{ this.text }};
    text-halo-fill: {{ this.poly }};
  }{{/each}}
}
