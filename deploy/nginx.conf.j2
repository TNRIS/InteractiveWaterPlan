server {
    root {{ nginx_dir }};
    listen {{ nginx_port}} default_server;
    port_in_redirect off;
    server_tokens off;

    location {{ tilestache_url_root}} {
        include uwsgi_params;
        uwsgi_param SCRIPT_NAME {{ tilestache_url_root }};
        uwsgi_modifier1 30;

        uwsgi_pass {{ tilestache_uwsgi_socket }};

        # number of seconds uwsgi will let a request be open before timing out if the
        # app hasn't started responding
        uwsgi_read_timeout 20;
    }
}
